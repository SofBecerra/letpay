<div class="container-custom3">
  <h1>show | Vista 4</h1>
  <p>Find me in app/views/bills/show.html.erb</p>
  <p>Poner abajo el display de los items</p>

  <% @bill.items.each do |item| %>
    <div class="d-flex justify-content-between mt-3">
      <p>
        <strong><%= item.user.email %></strong>
        <strong><%= item.category %></strong>
        <strong>$ <%= item.price %></strong>
      </p>
    </div>
  <% end %>

  <p>Aqui van agregar los items</p>

  <%= simple_form_for ([@bill, @item]) do |f| %>
    <%= f.select :category, options_for_select(%w[Postres Bebidas Entradas Platosfuertes Otros]), {}, { class: 'form-control' } %>
    <%= f.input :price, input_html: { class: 'form-control' } %>
    <%= f.submit 'Añadir', class: 'btn btn-custom btn-green w-100 mt-3' %>
  <% end %>

</div>
<div class="linea-verde">
<button type="button" class="btn-circle">botón</button>
</div>


<%= link_to "Participantes", participants_bill_path(@bill), class: "btn btn-primary" %>
<%= link_to "Calcular Cuenta", calculate_bill_path(@bill), class: "btn btn-success" %>
<%= link_to "Items", items_bill_path(@bill), class: "btn btn-primary" %>
<%= link_to "Layout", layout_bill_path(@bill), class: "btn btn-success" %>
