
<div class="container-custom3">
  <div class="container-custom3">
  <h1>Cuenta</h1>

  <%= simple_form_for @bill do |f| %>
    <div class="mb-3">
      <h5><%= f.input :total_amount, label: "Total de la cuenta", placeholder: 'ğŸ§¾ Monto de la cuenta' %></h5>
    </div>
    <div class="d-grid">
      <%= f.submit 'Actualizar', class: 'btn btn-custom btn-yellow' %>
    </div>
  <% end %>

  <%= turbo_frame_tag "new_item" %>
  <%# turbo_frame_tag "items" do %>
    <% @bill.items.each do |item| %>
      <%= turbo_frame_tag "items" do %>
        <%= render "items/item", item: item %>
      <% end %>
    <% end %>
  <%# end %>
<div class="footer-wrapper">
        <div class="button-container">
            <%= link_to participants_bill_path(@bill), class: "icon-button" do %>
                <i class="bi bi-person"></i>
                <p>Participantes</p>
            <% end %>
            <%= link_to items_bill_path(@bill), class: "btn-circle", data:{turbo_frame: "new_item"} do %>
                <i class="bi bi-plus"></i>
            <% end %>
            <%= link_to calculate_bill_path(@bill), class: "icon-button" do %>
                <i class="bi bi-receipt"></i>
                <p>La cuenta</p>
            <% end %>
        </div>
    </div>
</body>
</html>
